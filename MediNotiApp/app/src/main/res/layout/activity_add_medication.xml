<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Campo para el nombre del medicamento -->

    <!-- Campo para la dosis del medicamento -->

    <!-- Campo para la frecuencia del medicamento -->

    <EditText
        android:id="@+id/etMedicationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del medicamento"
        android:importantForAccessibility="yes"
        android:inputType="text" />

    <EditText
        android:id="@+id/etMedicationDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Dosis (ej. 500 mg)"
        android:importantForAccessibility="yes"
        android:inputType="text" />

    <EditText
        android:id="@+id/etMedicationFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Frecuencia (ej. Cada 8 horas)"
        android:importantForAccessibility="yes"
        android:inputType="text" />

    <Button
        android:id="@+id/btnSaveMedication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar Medicamento"
        android:textAllCaps="false" />

    <!-- BotÃ³n para guardar el medicamento -->

</LinearLayout>
