<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
    <TextView
        android:id="@+id/tvNombre_txt"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Nombre"
        android:backgroundTint="@color/back_Text"
        android:background="@drawable/border"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvApellido_txt"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Apellido"
        android:backgroundTint="@color/back_Text"
        android:background="@drawable/border"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvApellido"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvCorreo_txt"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Correo"
        android:backgroundTint="@color/back_Text"
        android:background="@drawable/border"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opciones"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold"
                android:backgroundTint="@color/back_Text"
                android:background="@drawable/border"/>

            <Button
                android:id="@+id/btnExportCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/ButtonColorActivity"
                android:text="Exportar Calendario de Medicamentos"
                android:textStyle="bold"
                android:drawableStart="@android:drawable/ic_menu_share"
                android:paddingStart="16dp"
                android:drawablePadding="8dp"
                android:textSize="24sp" />
            <Button
                android:id="@+id/btnExportCalendarTake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/ButtonColorActivity"
                android:text="Exportar Calendario de Medicamentos y Tomas"
                android:textStyle="bold"
                android:drawableStart="@android:drawable/ic_menu_share"
                android:paddingStart="16dp"
                android:drawablePadding="8dp"
                android:textSize="24sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
