<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Medinotiapp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->


    </style>

    <style name="SpinnerTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="DropdownTextStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTitle">
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Medinotiapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Medinotiapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Medinotiapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Border_LinearLayout">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="Header">
        <item name="android:textSize">26dp</item>
        <item name="android:backgroundTint">@color/back_Text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/border</item>

    </style>

</resources>
